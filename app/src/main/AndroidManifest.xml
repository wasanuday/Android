<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a2dv606.androidproject">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WaterDrunkHistory.DateLogActivity" />
        <activity android:name=".WaterDrunkHistory.TimeLogActivity" />
        <activity android:name=".Settings.SettingsActivity" />
        <activity android:name=".OutlinesFragments.OutlineActivity">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <receiver android:name=".Notifications.NotificationReciever" />
        <receiver android:name=".DBBroadcastReceiver" />

        <service
            android:name=".AppService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".WaterDrunkHistory.ChartActivity"></activity>
    </application>

</manifest>